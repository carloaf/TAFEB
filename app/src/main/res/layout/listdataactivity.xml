<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walpapercmfdoss"
    android:orientation="vertical"
    app:shapeAppearanceOverlay="@drawable/border">

    <TextView
        android:id="@+id/tv_listdata"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:text="Resultado: "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_goneMarginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMensao"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:background="@color/my_light_primary"
        android:text="MensÃ£o"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_listdata" />

    <ListView
        android:id="@+id/list_item_id"
        android:layout_width="330dp"
        android:layout_height="250dp"
        android:divider="@color/cardview_shadow_start_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMensao" />

    <Button
        android:id="@+id/bKbutton"
        android:layout_width="107dp"
        android:layout_height="65dp"
        android:layout_marginBottom="52dp"
        android:text="Voltar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>




